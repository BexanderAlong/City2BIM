<Window x:Class="IFCTerrainGUI.GUI.ExportSettings.Metadata.metadata_din_spec_91391_2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IFCTerrainGUI.GUI.ExportSettings.Metadata"
        mc:Ignorable="d"
        Title="Metadata - DIN SPEC 91391-2"
        Height="350"
        Width="400"
        FontFamily="Bahnschrift"
        FontSize="12"
        ResizeMode="CanMinimize"
        Closing="Window_Closing">
    <Grid Margin="5">
        <StackPanel>

            <TextBlock Text="Here you can assign metadata (according to DIN 91391-2)."
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="5"/>

            <DockPanel Margin="3">
                <TextBlock Text="unique Identificator"
                           Margin="5"
                           Width="120"
                           VerticalAlignment="Center" />
                <TextBox VerticalContentAlignment="Center"
                         Text="{Binding guid}"
                         />
            </DockPanel>
            <DockPanel Margin="3">
                <TextBlock Text="Description"
                           Margin="5"
                           Width="120"
                           VerticalAlignment="Center" />
                <TextBox TextWrapping="Wrap"
                         VerticalContentAlignment="Center"
                         Text="{Binding description}"
                         Height="50"/>
            </DockPanel>

            <DockPanel Margin="3">
                <TextBlock Text="Creator"
                           Margin="5"
                           Width="120"
                           VerticalAlignment="Center" />
                <TextBox VerticalContentAlignment="Center" 
                         Text="{Binding creator}"/>
            </DockPanel>

            <DockPanel Margin="3">
                <TextBlock Text="Revision"
                           Margin="5"
                           Width="120"
                           VerticalAlignment="Center" />
                <TextBox VerticalContentAlignment="Center"
                         Text="{Binding revision}" />
            </DockPanel>

            <DockPanel Margin="3">
                <TextBlock Text="Version"
                           Margin="5"
                           Width="120"
                           VerticalAlignment="Center" />
                <TextBox VerticalContentAlignment="Center"
                         Text="{Binding version}" />
            </DockPanel>

            <DockPanel Margin="3">
                <TextBlock Text="Project ID"
                           Margin="5"
                           Width="120"
                           VerticalAlignment="Center" />
                <TextBox VerticalContentAlignment="Center"
                         Text="{Binding projectId}" />
            </DockPanel>

            <DockPanel Margin="3">
                <TextBlock Text="Meta schema"
                           Margin="5"
                           Width="120"
                           VerticalAlignment="Center" />
                <TextBox VerticalContentAlignment="Center"
                         Text="{Binding metadataSchema}" />
            </DockPanel>

            <Button Margin="3"
                    Content="Apply and Close" 
                    Height="25"
                    Click="Button_Click"/>
        </StackPanel>
