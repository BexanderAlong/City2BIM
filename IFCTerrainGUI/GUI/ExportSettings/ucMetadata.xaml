<UserControl x:Class="IFCTerrainGUI.GUI.ExportSettings.ucMetadata"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:meta ="clr-namespace:IFCTerrainGUI.GUI.ExportSettings.Metadata"
             xmlns:local="clr-namespace:IFCTerrainGUI.GUI.ExportSettings"
             mc:Ignorable="d" 
             d:DesignHeight="234" d:DesignWidth="385">
    <!--main controler for meta data (only include user controler)-->
    <Grid>
        <TabControl Grid.Row="1">
            <TabItem Header="IFC project settings">
                <!-- add user controler: ifc project-->
                <meta:ucMetaIfcProject/>
            </TabItem>

            <TabItem Header="Metadata export">
                <meta:ucMetaIfcJson/>

            </TabItem>
        </TabControl>
        
        
    </Grid>
</UserControl>
