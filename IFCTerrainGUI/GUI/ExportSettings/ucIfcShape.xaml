<UserControl x:Class="IFCTerrainGUI.GUI.ExportSettings.ucIfcShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IFCTerrainGUI.GUI.ExportSettings"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="380">
    <Grid>
        <StackPanel VerticalAlignment="Center" Grid.Column="1" Orientation="Horizontal">
            <ComboBox Width="200">
                <!--default seeting GCS-->
                <ComboBoxItem Content="IfcGeometricCurveSet" IsSelected="True"/>
                <ComboBoxItem Content="IfcShellBasedSurfaceModell"/>
                <ComboBoxItem Content="IfcTriangulatedFaceSet"/>
                <ComboBoxItem Content="IfcTriangulatedIrregularNetwork" IsEnabled="False"/>
            </ComboBox>

            <TextBlock Text="Min. distance:" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <TextBox Width="30" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text="[m]" Margin="5,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
