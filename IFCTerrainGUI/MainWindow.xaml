<Window x:Name="IFCTerrainGUI" x:Class="IFCTerrainGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ucXml = "clr-namespace:IFCTerrainGUI.GUI.XML"
        xmlns:ucDxf ="clr-namespace:IFCTerrainGUI.GUI.DXF"
        xmlns:ucGraftbat ="clr-namespace:IFCTerrainGUI.GUI.Grafbat"
        xmlns:local="clr-namespace:IFCTerrainGUI"
        
        mc:Ignorable="d"
        Title="IFCTerrain GUI" Height="800" Width="800" FontFamily="Bahnschrift" FontSize="14" ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF0F0F0" Offset="1"/>
                <GradientStop Color="White"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7"/>
            <ColumnDefinition />
            <ColumnDefinition Width="10"/>
            <ColumnDefinition />
            <ColumnDefinition Width="7"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="7"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="7"/>
        </Grid.RowDefinitions>
        <!-- Logo -->
        <Image x:Name="imgDdBimLogo" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" HorizontalAlignment="Center" Source="Resources/DD_BIM_LOGO.png" VerticalAlignment="Top"/>

        <!-- Textbox "Import Settings"-->
        <TextBlock x:Name="tbImportSettings" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="16" FontWeight="Bold" Text="Import Settings"/>

        <!-- Textbox "Export Settings"-->
        <TextBlock x:Name="tbExportSettings" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="16" FontWeight="Bold" Text="Export Settings"/>

        <TextBlock x:Name="tbDocumentation" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Documentation" ToolTip="Here you can access the documentation for further information (external link to github repository)" MouseDown="tbDocumentation_MouseDown" Foreground="#FF223E92" TextDecorations="Underline"/>

        <!--Selection field for the import of the different data formats-->
        <TabControl 
            x:Name="tabControlImport" 
            Grid.Column="1"
            Grid.Row="2"
            Grid.RowSpan="10"            
            >
            <!--#region DXF-->
            <TabItem x:Name="tabPageDxf"        
                     Header="CAD (DXF)">
                <ucDxf:ucReadDxf/>
            </TabItem>
            <!--#endregion DXF-->

            <!--#region LandXML CityGML -->
            <TabItem 
                x:Name ="tabPageXml"       
                Header="TIN (LandXML, CityGML)"
                >
                <ucXml:ucReadXml/>
            </TabItem>
            <!--#endregion LandXML CityGML -->
            <TabItem x:Name ="tabPageGrafbat"   Header="GEOgraf (OUT)">
                <ucGraftbat:ucReadGraftbat/>
            </TabItem>
            <TabItem x:Name ="tabPagePostGis"   Header="Database (PostGIS)"/>
            <TabItem x:Name ="tabPageGrid"      Header="Grid (XYZ)"/>
            <TabItem x:Name ="tabPageReb"       Header="REB (DA45, DA49, DA58)"/>
        </TabControl>



        <!--grid erstellen, um Informationen aus den gelesenen Datein abzubilden-->

        <GroupBox 
            Grid.Column="3"
            Grid.Row="2"
            Grid.RowSpan="2"
            Header="IFC Version"
            Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Select:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <ComboBox>
                        <!--default seeting GCS-->
                        <ComboBoxItem Content="IFC 2x3 (MESH)"/>
                        <ComboBoxItem Content="IFC 4 (MESH)"/>
                        <ComboBoxItem Content="IFC 2x3 (TIN)"/>
                        <ComboBoxItem Content="IFC 4 (TIN)" IsSelected="True"/>
                        <ComboBoxItem Content="IFC 4.3" IsEnabled="False"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <CheckBox VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" Content="Export IFCXML" Margin="5,0,0,0"/>
                    <CheckBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Content="IfcGeographicElement" Margin="20,0,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox 
            Grid.Column="3"
            Grid.Row="4"
            Grid.RowSpan="2"
            Header="IFC Shape Representation"
            Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <TextBlock Text="Select: " VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <StackPanel VerticalAlignment="Center" Grid.Column="1">
                    <ComboBox>
                        <!--default seeting GCS-->
                        <ComboBoxItem Content="IfcGeometricCurveSet" IsSelected="True"/>
                        <ComboBoxItem Content="IfcShellBasedSurfaceModell"/>
                        <ComboBoxItem Content="IfcTriangulatedFaceSet"/>
                        <ComboBoxItem Content="IfcTriangulatedIrregularNetwork" IsEnabled="False"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Text="Minimum distance:" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    <TextBox Width="80" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock Text="[m]" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Column="3"
            Grid.Row="6"
            Grid.RowSpan="3"
            Header="Georeferencing"
            Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Column="3"
            Grid.Row="9"
            Grid.RowSpan="2"
            Header="User Settings"
            Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1.8*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Organisation Name:" VerticalAlignment="Center" Margin="3,0,0,0"/>
                <TextBlock Grid.Row="1" Text="Given Name:" VerticalAlignment="Center" Margin="3,0,0,0"/>
                <TextBlock Grid.Row="2" Text="Family Name:" VerticalAlignment="Center" Margin="3,0,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="0,2"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="0,2"/>
                <TextBox Grid.Row="2" Grid.Column="1" Margin="0,2"/>

            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Column="3"
            Grid.Row="11"
            Grid.RowSpan="2"
            
            
            Header="Metadaten (Placeholder)"
            Margin="0,0,0,5">


        </GroupBox>

        <GroupBox
            Grid.Column="3"
            Grid.Row="13"
            Grid.RowSpan="3"
            Header="Log"
            Margin="0,0,0,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>


                <TextBlock 
                    Text="Choose Verbosity Level:" 
                    VerticalAlignment="Center"
                    Margin="5,0,0,0"/>

                <ComboBox Grid.Column="1">
                    <ComboBoxItem Content="Trace"/>
                    <ComboBoxItem Content="Debug" IsSelected="True"/>
                    <ComboBoxItem Content="Info"/>
                    <ComboBoxItem Content="Warn"/>
                    <ComboBoxItem Content="Error"/>
                </ComboBox>

                <TextBox
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0,5,0,0"
                    IsReadOnly="True">

                </TextBox>
            </Grid>
        </GroupBox>


        <GroupBox
            Grid.Row="16"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Header="Target IFC file location">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button
                        Content="Choose"
                        Grid.Column="0"
                        Height="20"
                    />

                <TextBox
                        Margin="5,0,5,0"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Height="20"
                    />
                <Button
                    x:Name="btnStart"
                    Content="Start"
                    Grid.Column="2"
                    Height="20"
                    IsEnabled="False"
                    />
            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Column="1"
            Grid.Row="12"
            Grid.RowSpan="4"         
            Header="Current Terrain (Information panel)"
            Margin="0,0,0,5">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="iPFileName" Text="File name" Height="20" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <TextBlock x:Name="iPFileType" Text="File type" Height="20" VerticalAlignment="Center" Margin="5,5,0,0"/>
                    <TextBlock x:Name="iPLayerDtm" Text="Layer/ Horizon" Height="20" VerticalAlignment="Center" Margin="5,5,0,0"/>
                    <TextBlock x:Name="iPGridSize" Text="Grid size [m]" Height="20" VerticalAlignment="Center" Margin="5,5,0,0"/>
                    <TextBlock x:Name="iPLayerBreakLine" Text="Layer (Breaklines)" Height="20" VerticalAlignment="Center" Margin="5,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" IsEnabled="False">
                    <TextBox x:Name="iPTBFileName" Height="20" VerticalAlignment="Center" Text="" IsReadOnly="True"/>
                    <TextBox x:Name="iPTBFileType" Height="20" VerticalAlignment="Center" Text="" Margin="0,5,0,0" IsReadOnly="True"/>
                    <TextBox x:Name="iPTBPLayerDtm" Height="20" VerticalAlignment="Center" Text="" Margin="0,5,0,0" IsReadOnly="True"/>
                    <TextBox x:Name="iPTBGridSize" Height="20" VerticalAlignment="Center" Text="" Margin="0,5,0,0" IsReadOnly="True"/>
                    <TextBox x:Name="iPTBLayerBreakLine" Height="20" VerticalAlignment="Center" Text="" Margin="0,5,0,0" IsReadOnly="True"/>
                </StackPanel>

            </Grid>




        </GroupBox>
    </Grid>
</Window>
