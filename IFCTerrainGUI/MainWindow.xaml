<Window x:Name="IFCTerrainGUI" x:Class="IFCTerrainGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IFCTerrainGUI"
        mc:Ignorable="d"
        Title="IFCTerrain GUI" Height="800" Width="800" FontFamily="Bahnschrift" FontSize="14" Background="LightGray" ResizeMode="CanMinimize">
    <Grid>
        <!-- Logo -->
        <Image x:Name="imgDdBimLogo" HorizontalAlignment="Left" Margin="10,10,0,0" Height="40" Source="Resources/DD_BIM_LOGO.png" VerticalAlignment="Top"/>
        
        <!-- Textbox "Import Settings"-->
        <TextBlock x:Name="tbImportSettings" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Text="Import Settings" Margin="10,55,0,0"/>

        <!-- Textbox "Export Settings"-->
        <TextBlock x:Name="tbExportSettings" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Text="Export Settings" Margin="410,55,0,0"/>

        <!--Selection field for the import of the different data formats-->
        <TabControl x:Name="tabControlImport" HorizontalAlignment="Left" Width="380" Margin="10,80,0,280">
            <!--#region DXF-->
            <TabItem x:Name="tabPageDxf"        Header="CAD (DXF)">
                <!--placeholder for user controls-->
            </TabItem>
            <!--#endregion DXF-->

            <!--#region LandXML CityGML -->
            <TabItem x:Name ="tabPageXml"       Header="TIN (LandXML, CityGML)"/>
            <!--#endregion LandXML CityGML -->
            <TabItem x:Name ="tabPageGrafbat"   Header="GEOgraf (OUT)"/>
            <TabItem x:Name ="tabPagePostGis"   Header="Database (PostGIS)"/>
            <TabItem x:Name ="tabPageGrid"      Header="Grid (XYZ)"/>
            <TabItem x:Name ="tabPageReb"       Header="REB (DA45, DA49, DA58)"/>
        </TabControl>
    </Grid>
</Window>
