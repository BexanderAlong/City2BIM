<Window x:Class="City2RVT.GUI.DataCat.LoginScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:City2RVT.GUI.DataCat"
             mc:Ignorable="d" 
             Height="360" Width="450" MinWidth="450" MinHeight="360">
    <Border Margin="5">
        <StackPanel Margin="10">
            <Label Content="Login to External Data Catalog" FontSize="24" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Server-Url" FontSize="20"></Label>
            <TextBox Name="ServerBox" FontSize="18" Text="https://landbim.org/graphql"></TextBox>
            <Label Content="Username" FontSize="20"></Label>
            <TextBox Name="userNameBox" FontSize="18"></TextBox>
            <Label Content="Password" FontSize="20"></Label>
            <PasswordBox Name="PassWordBox" FontSize="18"></PasswordBox>
            <Button Margin="15" FontSize="24" Content="Submit" HorizontalAlignment="Center" Click="submit_click" Padding="10,1"></Button>
        </StackPanel>
    </Border>
</Window>
