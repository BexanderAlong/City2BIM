<UserControl x:Class="City2RVT.GUI.DTM2BIM.userControler.ReadREB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:City2RVT.GUI.DTM2BIM.userControler"
             mc:Ignorable="d" 
             d:DesignHeight="525" d:DesignWidth="385">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnReadReb" Grid.ColumnSpan="2" Content="Read 'REB' file"/>
        
        <ListBox x:Name="lbRebSelect" Grid.Row="1" Grid.Column="1" Margin="0,5" IsEnabled="False"/>
        
        <TextBlock Grid.Row="1" Margin="5" Text="Select Horizon"/>
        
        <Button x:Name="btnProcessReb" Grid.Row="2" Grid.ColumnSpan="2" Content="Process 'REB' file" IsEnabled="False"/>
    </Grid>
</UserControl>
